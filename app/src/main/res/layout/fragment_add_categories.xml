<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".admin.add_categories"
    android:background="@color/background_color">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white"
        android:layout_gravity="center"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linear"
            android:padding="15dp"
            android:background="@drawable/edittext_shape"
            >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/background_splash"
            android:id="@+id/add_category_image"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
        </ImageView>
        </LinearLayout>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/add_image"
            android:background="@drawable/ic_baseline_add_24"
            app:layout_constraintEnd_toEndOf="@+id/linear"
            app:layout_constraintBottom_toBottomOf="@+id/linear"
            >
        </TextView>
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/add_category_name"
            android:textColorHint="@color/color3"
            android:background="@drawable/edittext_shape"
            android:padding="7dp"
            android:textColor="@color/color3"
            android:paddingStart="10dp"
            android:inputType="textMultiLine"
            android:drawablePadding="10dp"
            android:hint=" اسم الفئة "
            android:ems="10"
            app:layout_constraintTop_toBottomOf="@id/linear"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/add_category"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="7dp"
            android:background="@drawable/button_shape"
            android:text="اضافة فئة "
            app:layout_constraintTop_toBottomOf="@id/add_category_name"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>