<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".admin.add_new_product">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/recycler_item_shaps" >
                <include android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/multiple_imageview"
                    android:id="@+id/linear"
                    >
                </include>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:id="@+id/add_p_image"
                    android:background="@drawable/ic_baseline_add_24"
                    app:layout_constraintEnd_toEndOf="@+id/linear"
                    app:layout_constraintTop_toBottomOf="@+id/linear"
                    >
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:id="@+id/linear1"
                    app:layout_constraintTop_toBottomOf="@id/add_p_image"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/color1"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_shape"
                        android:hint=" نوع المنتج  "
                        android:textColorHint="@color/color1"
                        android:id="@+id/add_product_type"
                        android:inputType="textMultiLine"

                        >
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:id="@+id/linear2"
                    app:layout_constraintTop_toBottomOf="@id/linear1"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/color3"
                        android:padding="5dp"
                        android:background="@drawable/edittext_shape"
                        android:textColorHint="@color/color1"
                        android:layout_weight="1"
                        android:hint="اسم المنتج  "
                        android:id="@+id/add_product_name"
                        >
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/linear3"
                    app:layout_constraintTop_toBottomOf="@id/linear2"
                    android:layout_margin="5dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="سعر المنتج "
                        android:layout_weight="1"
                        android:id="@+id/add_product_price"
                        android:textSize="18sp"
                        android:background="@drawable/edittext_shape"
                        android:textColorHint="@color/color1"
                        android:textColor="@color/color3"
                        android:padding="5dp"
                        android:inputType="textMultiLine"
                        android:importantForAutofill="no">
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:id="@+id/linear4"
                    app:layout_constraintTop_toBottomOf="@id/linear3"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="وصف المنتج  "
                        android:id="@+id/add_product_des"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textColorHint="@color/color1"
                        android:background="@drawable/edittext_shape"
                        android:textSize="18sp"
                        android:textColor="@color/color3"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:inputType="textMultiLine"

                        >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout_send_report"
                    app:layout_constraintTop_toBottomOf="@id/linear4">
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:id="@+id/add_new_pro"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:paddingEnd="30dp"
                        android:background="@drawable/button_shape"
                        android:text="اضافة منتج جديد"
                        android:layout_weight="1"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>